{
  "manifest_version": 2,
  "name": "Nghe AZ crawlers",
  "description": "Allow to crawl data from predefined sites.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background":{
    "scripts": ["jquery-3.3.1.min.js", "eventPage.js"],
    "persistent": false
  },
  "content_scripts":[{
      "matches": ["https://www.facebook.com/groups/*", "file:///C:/Users/Acer/Desktop/*"],
      "js": ["jquery-3.3.1.min.js", "extractFbGroups.js"] 
    }],
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "activeTab"
  ]  
}